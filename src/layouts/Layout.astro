---
import "./global.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" data-dark-mode="false" data-js-enabled="false">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" sizes="64x64" href="/favicon-64x64.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <script blocking>
      // Detect dark mode before page load
      if (window.matchMedia("(prefers-color-scheme: dark)").matches) {
        document.documentElement.dataset.darkMode = "true";
      }
      /* Show interactive elements that require JS to be enabled */
      document.documentElement.dataset.jsEnabled = "true";
    </script>
  </head>
  <body>
    <main>
      <slot />
    </main>
  </body>
</html>
