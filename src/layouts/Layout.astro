---
import MobileMenu from '@components/mobileMenu/MobileMenu.astro';
import './global.css';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" data-dark-mode="false" data-js-enabled="false">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" sizes="64x64" href="/favicon-64x64.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <script>
      import {
        getValueFromLocalStorage,
        DARKMODE_KEY,
      } from '@utils/localStorage';
      const storedDarkmode =
        (getValueFromLocalStorage(DARKMODE_KEY, false) as boolean) === true;
      // Detect dark mode before page load
      if (
        storedDarkmode === true ||
        window.matchMedia('(prefers-color-scheme: dark)').matches
      ) {
        document.documentElement.dataset.darkMode = 'true';
      }
      /* Show interactive elements that require JS to be enabled */
      document.documentElement.dataset.jsEnabled = 'true';
    </script>
  </head>
  <body>
    <svg aria-hidden="true">
      <defs>
        <clipPath id="squircle" clipPathUnits="objectBoundingBox"
          ><path
            d="M0,0.5 C0,0.115 0.115,0 0.5,0 s0.5,0.115 0.5,0.5 -0.115,0.5 -0.5,0.5 S0,0.885 0,0.5"
          ></path>
        </clipPath>
      </defs>
    </svg>
    <main>
      <slot />
    </main>
    <footer transition:persist>
      <p></p>
    </footer>
    <MobileMenu />
  </body>
</html>
