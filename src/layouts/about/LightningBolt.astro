---
type Props = {
  className?: string;
};

const { className } = Astro.props;
---

<svg
  xmlns="http://www.w3.org/2000/svg"
  xmlns:xlink="http://www.w3.org/1999/xlink"
  xml:space="preserve"
  viewBox="0 -30 182.79 339.36"
  height="160"
  width="86.2"
  aria-hidden="true"
  class={className}
>
  <use
    id="lightning_shade"
    href="#lightning_shadow"
    fill="var(--system-shadow-5)"
    stroke="currentColor"
    stroke-linecap="round"
    stroke-linejoin="round"
    stroke-width="6.3"
  >
  </use>
  <use
    href="#lightning_foreground"
    fill="var(--system-shadow-5)"
    stroke="currentColor"
    stroke-linecap="round"
    stroke-linejoin="round"
    stroke-width="5"
  >
  </use>
  <use
    id="lightning_yellow"
    href="#lightning_foreground"
    fill="#ffdead80"
    opacity="0"
    stroke-linecap="round"
    stroke-linejoin="round"
    stroke-width="5"
  >
  </use>
  <use
    id="lightning_glow_yellow"
    href="#lightning_foreground"
    fill="#ffdeade6"
    opacity="0"
    filter="url(#lightning_f1)"
    stroke-linecap="round"
    stroke-linejoin="round"
    stroke-width="5"
  >
  </use>
  <use
    id="lightning_gradient"
    href="#lightning_foreground"
    fill="url(#lightning_paint3)"
    opacity="0.7"
    stroke-linecap="round"
    stroke-linejoin="round"
    stroke-width="5"></use>
  <path
    fill="url(#lightning_paint4)"
    d="m51.33 84.82 15.34-68.28 68.85-9.86-4.04 7.65-58.34 9.1-15.27 61.11Z"
  ></path>
  <defs>
    <path
      id="lightning_shadow"
      d="m72.06 21.37 74.61-10.7-35.57 101.07 33.98-5.64L69.81 275l8.45-124.35-41.36 6.88Z"
    ></path>
    <path
      id="lightning_foreground"
      d="m67.3 23.28 74.62-10.7-35.57 101.07 33.98-5.64-70.57 163.97 8.68-126.52-40.2 6.94z"
      transform="translate(-2.67 -8.96)"></path>
    <filter
      id="lightning_f1"
      x="-100%"
      y="-100%"
      width="300%"
      height="300%"
      xmlns="http://www.w3.org/2000/svg"
    >
      <feGaussianBlur in="SourceGraphic" stdDeviation="20" edgeMode="duplicate"
      ></feGaussianBlur>
    </filter>
    <linearGradient id="lightning_paint2">
      <stop offset="0" stop-color="#fff"></stop>
      <stop offset="1" stop-color="#fff" stop-opacity="0"></stop>
    </linearGradient>
    <linearGradient id="lightning_paint1">
      <stop offset="0.12" stop-color="var(--princeton-500)"></stop>
      <stop offset="0.88" stop-color="var(--verdigris-500)"></stop>
      <stop offset="1" stop-color="var(--verdigris-400)"></stop>
    </linearGradient>
    <linearGradient
      xlink:href="#lightning_paint1"
      id="lightning_paint3"
      x1="28.65"
      x2="207.20"
      y1="81.44"
      y2="201.42"
      gradientUnits="userSpaceOnUse"
    >
    </linearGradient>
    <linearGradient
      xlink:href="#lightning_paint2"
      id="lightning_paint4"
      x1="66.69"
      x2="92.95"
      y1="16.52"
      y2="45.27"
      gradientUnits="userSpaceOnUse"></linearGradient>
  </defs>
</svg>
