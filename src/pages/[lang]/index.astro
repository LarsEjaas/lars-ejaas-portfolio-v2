---
import HomeLayout from '@layouts/Home.astro';
import { getLangFromUrl, useTranslations } from '@i18n/utils';
import type { DanishLanguageSlug } from '@i18n/settings';

type Props = Record<string, never>;

const lang = getLangFromUrl(Astro.url);
const t_home = useTranslations(lang, 'home');

type TranslatedHomePath = { params: { lang: DanishLanguageSlug } };

export function getStaticPaths() {
  const paths: TranslatedHomePath[] = [{ params: { lang: 'da' } }];
  return paths;
}
---

<HomeLayout
  title={t_home('home_title')}
  lang={lang}
  inert={false}
  seo={{
    openGraph: {
      image: {
        name: `home_${lang}`,
        alt: t_home('seo_image_alt'),
      },
    },
  }}
  description={t_home('seo_description')}
/>
