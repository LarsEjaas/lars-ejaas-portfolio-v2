---
import Layout from '@layouts/Layout.astro';
import ThemeSwitch from '@components/ThemeSwitch.astro';
import Carousel from '@components/carousel/Carousel.astro';
import { newsItems } from '@news/newsItems';
import { getLangFromUrl } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
---

<Layout title="Home">
  <ThemeSwitch />
  <Carousel
    labels={{
      title: 'Latest News',
      archiveTitle: 'Read older news',
      previous: 'Scroll to previous news card',
      next: 'Scroll to next news card',
    }}
    items={newsItems[lang]}
    maxNumberOfItems={19}
  />
</Layout>
