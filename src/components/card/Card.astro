---
import styles from './card.module.css';
import type { CamelCaseString, KebabCaseString } from '@customTypes/index';

type Props<T extends string = string, U extends string = string> = {
  inert: boolean;
  /**  distinct identifying name used for view transitions. Should be in kebab-case.
   * @see {@link https://developer.mozilla.org/en-US/docs/Web/CSS/view-transition-name MDN Web Docs}
   */
  viewTransitionName: KebabCaseString<T> | undefined;
  /** Unique identifier for this card. Should be written in camelCase
   * This can also be used as an anchor to go directly to this card.
   */
  id?: CamelCaseString<U>;
  className?: string | undefined;
  as?: keyof astroHTML.JSX.DefinedIntrinsicElements;
};

const {
  as: Element = 'section',
  inert,
  viewTransitionName,
  id,
  className,
  ...rest
} = Astro.props;
---

<Element
  {...rest}
  id={id}
  inert={inert}
  class={`${styles.card} ${className || ''}`}
  style={viewTransitionName
    ? `view-transition-name: ${viewTransitionName}`
    : undefined}
>
  <slot />
</Element>
