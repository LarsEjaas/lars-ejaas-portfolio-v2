{
  "name": "lars-ejaas-portfolio-v2",
  "type": "module",
  "version": "1.0.0",
  "scripts": {
    "dev": "netlify dev",
    "start": "astro dev",
    "build": "npm ci --include=dev && astro check && node --experimental-transform-types ./src/scripts/bluesky.mts && astro build",
    "build:fast": "astro build",
    "preview": "netlify serve",
    "astro": "astro",
    "lint": "prettier --write  \"**/*.{js,jsx,ts,tsx,md,mdx,astro}\" && eslint --fix \"src/**/*.{js,ts,jsx,tsx,astro}\"",
    "type-check": "astro check",
    "type-check:watch": "astro check --watch",
    "prepare": "test \"$NODE_ENV\" = production || husky install",
    "generate:routes": "node --experimental-transform-types ./src/scripts/generate-sitemap-dictionary.mts",
    "get-dev-tips-data": "node --experimental-transform-types ./src/scripts/bluesky.mts",
    "get-likes": "netlify functions:invoke get-dev-tips-likes --port 5432",
    "update-likes": "netlify functions:invoke update-dev-tips-likes --port 5432"
  },
  "engines": {
    "node": ">=21.0.0",
    "npm": ">=10.2.3"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/netlify": "^6.3.4",
    "@astrojs/sitemap": "^3.4.0",
    "@astrojs/ts-plugin": "^1.10.4",
    "@atproto/api": "^0.15.26",
    "astro": "^5.8.1",
    "dompurify": "^3.2.6",
    "dotenv": "^16.5.0",
    "jsdom": "^26.1.0",
    "nodemailer": "^7.0.3",
    "nodemailer-express-handlebars": "^7.0.0",
    "p-limit": "^6.2.0",
    "pell": "^1.0.6",
    "sharp": "^0.34.2",
    "zod": "^3.25.42"
  },
  "devDependencies": {
    "@types/eslint": "^9.6.1",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.15.29",
    "@types/nodemailer": "^6.4.17",
    "@types/nodemailer-express-handlebars": "^4.0.5",
    "@types/pell": "^1.0.4",
    "@typescript-eslint/eslint-plugin": "^8.33.0",
    "@typescript-eslint/parser": "^8.33.0",
    "astro-eslint-parser": "^1.2.2",
    "eslint": "^9.27.0",
    "eslint-plugin-astro": "^1.3.1",
    "globals": "^16.2.0",
    "husky": "^9.1.7",
    "prettier": "^3.5.3",
    "prettier-plugin-astro": "^0.14.1",
    "typescript": "^5.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "$schema": "https://json.schemastore.org/package"
}
